<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/touchPadView"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:contentDescription="@string/touchpad"
        android:scaleType="centerCrop"
        android:scaleX="1.6"
        android:scaleY="1.6"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/left_click"
            android:text="" />

        <ImageView
            android:id="@+id/keyboardOpen"
            android:layout_width="117dp"
            android:layout_height="50dp"
            android:contentDescription="@string/open_close_keyboard"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/rightClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/right_click"
            android:text="" />

    </LinearLayout>

    <EditText
        android:id="@+id/keyboardView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:inputType="textMultiLine"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mediaPrevious"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/mediaPlay"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/mediaNext"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_media_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mediaVolDown"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/btn_minus" />

        <ImageView
            android:id="@+id/mediaVolMute"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/ic_lock_silent_mode" />

        <ImageView
            android:id="@+id/mediaVolUp"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            app:srcCompat="@android:drawable/btn_plus" />

    </LinearLayout>

    <ImageView
        android:id="@+id/windows"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="2dp"
        app:srcCompat="@android:drawable/ic_dialog_dialer" />
</LinearLayout>