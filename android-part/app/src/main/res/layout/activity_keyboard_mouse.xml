<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:minWidth="350dp"
    android:orientation="vertical">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/touchPadView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/touchpad"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/touchpad_background" />

        <ImageView
            android:id="@+id/function_keys"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:contentDescription="@string/function_keys"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/function_keys" />

        <ImageView
            android:id="@+id/f_knob"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            app:srcCompat="@drawable/circle_inner" />
    </FrameLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/left_click"
            android:text="" />

        <ImageView
            android:id="@+id/keyboardOpen"
            android:layout_width="117dp"
            android:layout_height="50dp"
            android:contentDescription="@string/open_close_keyboard"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/rightClick"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/right_click"
            android:text="" />

    </LinearLayout>

    <EditText
        android:id="@+id/keyboardView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_margin="2dp"
        android:hint="@string/keyboard_field"
        android:importantForAutofill="no"
        android:inputType="textMultiLine"
        android:marqueeRepeatLimit="marquee_forever"
        android:visibility="visible" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/mediaPrevious"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/media_previous"
            app:srcCompat="@android:drawable/ic_media_previous" />

        <ImageView
            android:id="@+id/mediaPlay"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/media_play"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/mediaNext"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/media_next"
            app:srcCompat="@android:drawable/ic_media_next" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/escape"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/esc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/esc"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />

        </FrameLayout>

        <ImageView
            android:id="@+id/mediaVolMute"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/volume_mute"
            app:srcCompat="@android:drawable/ic_lock_silent_mode" />

        <ImageView
            android:id="@+id/mediaVolUp"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/volume_up"
            app:srcCompat="@android:drawable/btn_plus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/shift"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/shift" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/shift"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />

        </FrameLayout>

        <ImageView
            android:id="@+id/tab"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/tab"
            app:srcCompat="@android:drawable/ic_menu_sort_by_size" />

        <ImageView
            android:id="@+id/mediaVolDown"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/volume_down"
            app:srcCompat="@android:drawable/btn_minus" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/ctrl"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/ctrl" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/ctrl"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />

        </FrameLayout>

        <ImageView
            android:id="@+id/windows"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/windows"
            app:srcCompat="@android:drawable/ic_dialog_dialer" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/alt"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/alt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/alt"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/caps_lock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/caps" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/caps"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />

        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">


            <ImageView
                android:id="@+id/up_arrow"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/up_arrow"
                app:srcCompat="@android:drawable/stat_sys_upload" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/del"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/del" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/del"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />

        </FrameLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/left_arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/left_arrow"
            android:rotation="180"
            app:srcCompat="@android:drawable/ic_media_play" />

        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/down_arrow"
            app:srcCompat="@android:drawable/stat_sys_download" />

        <ImageView
            android:id="@+id/right_arrow"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1"
            android:contentDescription="@string/right_arrow"
            app:srcCompat="@android:drawable/ic_media_play" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

        <FrameLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_margin="2dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/f_keys"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:padding="8dp"
                android:text="@string/f"
                android:textAppearance="@style/TextAppearance.MaterialComponents.Button"
                android:textColor="?attr/colorOnPrimary" />
        </FrameLayout>

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1" />

    </LinearLayout>

</LinearLayout>