<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/touchPadView"
        android:layout_width="match_parent"
        android:layout_height="384dp"
        android:contentDescription="@string/touchpad"
        android:scaleType="centerCrop"
        android:scaleX="1.6"
        android:scaleY="1.6"
        app:srcCompat="?android:attr/listChoiceIndicatorMultiple" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftClick"
            android:contentDescription="@string/left_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="" />

        <Button
            android:id="@+id/rightClick"
            android:contentDescription="@string/right_click"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_margin="2dp"
            android:text="" />
    </LinearLayout>

    <ImageView
        android:id="@+id/keyboardOpen"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:srcCompat="@mipmap/ic_launcher" />

    <EditText
        android:id="@+id/keyboardView"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:inputType="textMultiLine"
        android:visibility="visible" />
</LinearLayout>