<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <EditText
        android:id="@+id/editTextIpAddress"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:hint="@string/enter_ip_address"
        android:inputType="text"
        android:text="@string/http_192_168_1_36_5000" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonConfirm"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:text="@string/tcp_adb_or_network"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/buttonConfirmAllButtons"
            android:layout_width="222dp"
            android:layout_height="70dp"
            android:text="@string/tcp_with_all_buttons" />
    </LinearLayout>

    <EditText
        android:id="@+id/editTextSocketIp"
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:hint="@string/enter_socket_ip_address"
        android:inputType="text"
        android:text="@string/_192_168_1_36" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="89dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/networkUdp"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="@string/network_udp"
            android:textAllCaps="false" />

        <Button
            android:id="@+id/networkUdpAllButtons"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_weight="1"
            android:text="@string/network_udp_all_buttons" />
    </LinearLayout>

    <Button
        android:id="@+id/buttonUsb"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:text="@string/usb"
        android:textAllCaps="false"/>

</LinearLayout>
